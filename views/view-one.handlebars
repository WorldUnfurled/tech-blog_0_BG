<div class="single-post">
  <article class="card">
    <div class="card-header">
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.user.username}} on {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-content">
      {{post.content}}
    </div>
  </article>

  {{#if post.comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments (Be Nice!)</h3>
      </div>

      <div class="card-content">
        {{#each post.comments}}
          <div>
            <p>
              {{content}}
            </p>
            <p>
              &mdash; {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment" class="card">
    <div class="card-header">
      <h3>Add a comment!</h3>
    </div>

    <div class="card-content">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <label class="form-label" for="comment-content">Comment</label>

      <textarea name="comment-content" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>